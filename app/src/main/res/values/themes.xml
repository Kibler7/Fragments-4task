<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HabitTracker" parent="Theme.AppCompat.Light">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>


    <style name="Theme.HabitTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HabitTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.HabitTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>